<UserControl x:Class="TagNamer.Views.Controls.FileListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:TagNamer.Models"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- 파일 리스트 스타일 -->
        <SolidColorBrush x:Key="ItemHoverBackground" Color="#E5F3FF"/>
        <SolidColorBrush x:Key="ItemSelectedBackground" Color="#CCE8FF"/>
        <SolidColorBrush x:Key="FolderHeaderBackground" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#666666"/>
        <SolidColorBrush x:Key="AccentColor" Color="#0078D4"/>

        <!-- ListViewItem 스타일 -->
        <Style x:Key="FileItemContainerStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="4,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <!-- 파일 템플릿 -->
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="bd"
                                SnapsToDevicePixels="true"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <GridViewRowPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource ItemHoverBackground}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource ItemSelectedBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- 폴더 템플릿 -->
                <DataTrigger Binding="{Binding IsFolder}" Value="True">
                    <Setter Property="Focusable" Value="False"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border Margin="0,10,0,2"
                                        Padding="10,8"
                                        Background="{StaticResource FolderHeaderBackground}"
                                        CornerRadius="4">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- 폴더 아이콘 -->
                                        <Image Width="16"
                                               Height="16"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"
                                               Source="{StaticResource FolderIcon}" />
                                        <!-- 폴더 경로 -->
                                        <TextBlock FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#333333"
                                                   Text="{Binding Path}" />
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ListView x:Name="FileListView"
                  BorderThickness="0"
                  Background="Transparent"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ItemsSource="{Binding Items}"
                  ItemContainerStyle="{StaticResource FileItemContainerStyle}"
                  AllowDrop="True"
                  KeyDown="ListView_KeyDown"
                  Drop="FileListView_Drop"
                  PreviewDragOver="FileListView_PreviewDragOver">
            <ListView.View>
                <GridView>
                    <GridView.ColumnHeaderContainerStyle>
                        <!-- 헤더 스타일 -->
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </GridView.ColumnHeaderContainerStyle>

                    <!-- 번호 -->
                    <GridViewColumn Header="번호" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center"
                                           Foreground="{StaticResource TextSecondary}"
                                           Text="{Binding AddIndex}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- 파일명 -->
                    <GridViewColumn Header="파일명" Width="250">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!-- 파일 아이콘 -->
                                    <Image Width="16"
                                           Height="16"
                                           Margin="0,2,8,0"
                                           Source="{StaticResource FileIcon}" />
                                    <TextBlock TextTrimming="CharacterEllipsis"
                                               Text="{Binding DisplayOriginalName}" />
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- 변경될 파일명 -->
                    <GridViewColumn Header="변경될 파일명" Width="250">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock FontWeight="Medium"
                                           Foreground="{StaticResource AccentColor}"
                                           TextTrimming="CharacterEllipsis"
                                           Text="{Binding DisplayNewName}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- 파일 크기 -->
                    <GridViewColumn Header="크기" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="{StaticResource TextSecondary}"
                                           Text="{Binding UnitSize}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- 경로 -->
                    <GridViewColumn Header="경로" Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="#999999"
                                           TextTrimming="CharacterEllipsis"
                                           Text="{Binding DirectoryName}"
                                           ToolTip="{Binding Path}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
