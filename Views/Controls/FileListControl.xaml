<UserControl x:Class="TagNamer.Views.Controls.FileListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <!-- 파일 목록 영역: 메인 콘텐츠 -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />  <!-- 향후 제목/필터 영역 (현재 미사용) -->
            <RowDefinition Height="*" />     <!-- 파일 목록 그리드 -->
        </Grid.RowDefinitions>

        <!-- 파일 목록 DataGrid -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Items}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  IsReadOnly="True"
                  ColumnHeaderHeight="34"
                  RowHeight="40"
                  ClipToBounds="True"
                  RowBackground="{DynamicResource SystemControlBackgroundAltHighBrush}"
                  AlternatingRowBackground="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                  HorizontalGridLinesBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
                  VerticalGridLinesBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}">
            <!-- DataGrid 스타일 정의 -->
            <DataGrid.Resources>
                <!-- 컬럼 헤더 스타일 -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" />
                    <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                    <Setter Property="Padding" Value="8,0" />
                    <Setter Property="FontWeight" Value="SemiBold" />
                    <Setter Property="BorderBrush" Value="{DynamicResource SystemControlBackgroundBaseMediumBrush}" />
                    <Setter Property="BorderThickness" Value="0,0,1,1" />
                    <Setter Property="ClipToBounds" Value="True" />
                </Style>
                <!-- 셀 스타일 -->
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                    <Setter Property="BorderBrush" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" />
                    <Setter Property="Padding" Value="8,0" />
                    <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                </Style>
            </DataGrid.Resources>

            <!-- DataGrid 컬럼 정의 -->
            <DataGrid.Columns>
                <!-- 번호 컬럼 -->
                <DataGridTextColumn Header="번호" Binding="{Binding DisplayIndex}" Width="60" />

                <!-- 파일명 컬럼: 아이콘 + 파일명 -->
                <DataGridTemplateColumn Header="파일명" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <!-- 파일/폴더 아이콘 (XAML 리소스) -->
                                <ContentControl Margin="0,0,8,0">
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Setter Property="Content" Value="{StaticResource FileIcon}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsFolder}" Value="True">
                                                    <Setter Property="Content" Value="{StaticResource FolderIcon}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>
                                <!-- 파일명 텍스트 -->
                                <TextBlock Text="{Binding OriginalName}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Normal" />
                                            <Style.Triggers>
                                                <!-- 폴더인 경우 굵게 표시 -->
                                                <DataTrigger Binding="{Binding IsFolder}" Value="True">
                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>`
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- 변경될 파일명 컬럼 -->
                <DataGridTextColumn Header="변경될 파일명" Binding="{Binding NewName}" Width="*" />
                <!-- 파일 크기 컬럼 -->
                <DataGridTextColumn Header="파일 크기" Binding="{Binding UnitSize}" Width="120" />
                <!-- 파일 경로 컬럼 -->
                <DataGridTextColumn Header="파일 경로" Binding="{Binding Path}" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
