<UserControl x:Class="TagNamer.Views.Controls.SidebarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d">

    <!-- 사이드바 스타일 정의 -->
    <UserControl.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </UserControl.Resources>

    <!-- 사이드바 -->
    <ScrollViewer PanningMode="VerticalOnly"
                  VerticalScrollBarVisibility="Hidden"
                  HorizontalScrollBarVisibility="Disabled">

        <Border Padding="12"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                CornerRadius="8"
                BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
                BorderThickness="1">

            <StackPanel Orientation="Vertical">

                <!-- 최상단: 메인 기능 -->
                <StackPanel Orientation="Vertical">
                    <Button Content="파일 추가"
                            Command="{Binding AddFilesCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Content="폴더 추가"
                            Command="{Binding AddFolderCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Command="{Binding OpenRuleSettingsCommand}"
                            Style="{StaticResource SidebarButtonStyle}">
                        <TextBlock Text="규칙 설정"
                                   Foreground="{DynamicResource SystemControlForegroundAccentBrush}"
                                   FontWeight="Bold"/>
                    </Button>
                    <Button Content="변경 적용"
                            Command="{Binding ApplyChangesCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Content="변경 취소"
                            Command="{Binding UndoChangesCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                </StackPanel>

                <Separator Margin="0,8,0,8" />

                <!-- 중단: 보조 기능 -->
                <StackPanel Orientation="Vertical">
                    <Button Content="목록 삭제"
                            Command="{Binding ListClearCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Content="번호 재정렬"
                            Command="{Binding ReorderNumberCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Content="확장자 변경"
                            Command="{Binding ExtensionCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <CheckBox Content="확장자 표시"
                              IsChecked="{Binding ShowExtension}" />
                    <CheckBox Content="개별 수정"
                              IsChecked="{Binding IsIndividualEditMode}" />
                    <CheckBox Content="삭제 확인 표시"
                              IsChecked="{Binding ConfirmDeletion}" />
                </StackPanel>

                <Separator Margin="0,8,0,8" />

                <!-- 최하단: 정렬 -->
                <StackPanel>
                    <TextBlock Margin="0,0,0,4"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                               Text="정렬 기준" />
                    <ComboBox HorizontalAlignment="Stretch"
                              Margin="0,0,0,4"
                              ItemsSource="{Binding SortOptions}"
                              SelectedItem="{Binding SelectedSortOption}"
                              DisplayMemberPath="Display" />

                    <TextBlock Margin="0,4,0,4"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                               Text="정렬 방향" />
                    <StackPanel Orientation="Vertical">
                        <RadioButton Content="오름차순"
                                    GroupName="SortDirection"
                                    IsChecked="{Binding SortAscending, Mode=TwoWay}" />
                        <RadioButton Content="내림차순"
                                    GroupName="SortDirection"
                                    IsChecked="{Binding SortDescending, Mode=TwoWay}" />
                    </StackPanel>
                </StackPanel>

            </StackPanel>

        </Border>

    </ScrollViewer>
</UserControl>
