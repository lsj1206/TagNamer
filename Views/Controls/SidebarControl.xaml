<UserControl x:Class="TagNamer.Views.Controls.SidebarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <!-- 사이드바 스타일 정의 -->
    <UserControl.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </UserControl.Resources>

    <!-- 사이드바 -->
    <ScrollViewer PanningMode="VerticalOnly"
                  VerticalScrollBarVisibility="Hidden"
                  HorizontalScrollBarVisibility="Disabled">

        <Border Padding="12"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                CornerRadius="8"
                BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
                BorderThickness="1">

            <StackPanel Orientation="Vertical">
                <!-- 파일 조작 버튼 -->
                <StackPanel Orientation="Vertical">
                    <Button Content="파일 추가"
                            Command="{Binding AddFilesCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Content="폴더 추가"
                            Command="{Binding AddFolderCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Content="규칙 설정"
                            Command="{Binding OpenRuleSettingsCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Content="번호 재정렬"
                            Command="{Binding ReorderNumberCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Content="목록 삭제"
                            Command="{Binding ListClearCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Content="변경 적용"
                            Command="{Binding ApplyChangesCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Content="변경 취소"
                            Command="{Binding UndoChangesCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                </StackPanel>

                <Separator Margin="0,8,0,8" />

                <!-- 정렬 옵션 -->
                <StackPanel>
                    <TextBlock Margin="0,0,0,4"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                               Text="정렬 기준" />
                    <ComboBox HorizontalAlignment="Stretch"
                              Margin="0,0,0,4"
                              ItemsSource="{Binding SortOptions}"
                              SelectedItem="{Binding SelectedSortOption}"
                              DisplayMemberPath="Display" />

                    <TextBlock Margin="0,4,0,4"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                               Text="정렬 방향" />
                    <StackPanel Orientation="Vertical">
                        <RadioButton Content="오름차순"
                                    GroupName="SortDirection"
                                    IsChecked="{Binding SortAscending, Mode=TwoWay}" />
                        <RadioButton Content="내림차순"
                                    GroupName="SortDirection"
                                    IsChecked="{Binding SortDescending, Mode=TwoWay}" />
                    </StackPanel>
                </StackPanel>

                <Separator Margin="0,8,0,8" />

                <!-- 설정 및 확장자 변경 -->
                <StackPanel>
                    <CheckBox Margin="0,2,0,4"
                              Content="삭제 확인 팝업"
                              IsChecked="{Binding ConfirmDeletion}" />
                    <CheckBox Margin="0,0,0,2"
                              Content="확장자 표시"
                              IsChecked="{Binding ShowExtension}" />
                    <TextBlock Margin="0,4,0,2"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                               Text="확장자 변경" />
                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="7*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Margin="0,0,4,0"
                                 Padding="8,6"
                                 Text="{Binding ExtensionInput, UpdateSourceTrigger=PropertyChanged}" />
                        <Button Grid.Column="1"
                                Margin="0"
                                Padding="6,2"
                                FontWeight="Normal"
                                Content="적용"
                                Command="{Binding ApplyExtensionCommand}"
                                Style="{StaticResource SidebarButtonStyle}" />
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>
