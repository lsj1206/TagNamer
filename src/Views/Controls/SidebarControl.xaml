<UserControl x:Class="TagNamer.Views.Controls.SidebarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d">

    <!-- 사이드바 버튼 스타일 정의 -->
    <UserControl.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
        </Style>
    </UserControl.Resources>

    <!-- 사이드바 -->
    <ScrollViewer PanningMode="VerticalOnly"
                  VerticalScrollBarVisibility="Hidden"
                  HorizontalScrollBarVisibility="Disabled">

        <Border Padding="12"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                CornerRadius="8"
                BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
                BorderThickness="1">

            <StackPanel Orientation="Vertical">

                <!-- 파일 추가/삭제 -->
                <StackPanel Orientation="Vertical">
                    <Button Content="{DynamicResource Btn_AddFile}"
                            Command="{Binding AddFilesCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Content="{DynamicResource Btn_AddFolder}"
                            Command="{Binding AddFolderCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Content="{DynamicResource Btn_ListClear}"
                            Command="{Binding ListClearCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                </StackPanel>

                <Separator Margin="0,0,0,8" />

                <!-- 파일 이름 변경 -->
                <StackPanel Orientation="Vertical">
                    <Button Command="{Binding OpenRuleSettingsCommand}"
                            Style="{StaticResource SidebarButtonStyle}">
                        <TextBlock Text="{DynamicResource Btn_RenameRule}"
                                   Foreground="{DynamicResource SystemControlForegroundAccentBrush}"
                                   FontWeight="Bold"/>
                    </Button>
                    <Button Content="{DynamicResource Btn_ApplyRename}"
                            Command="{Binding ApplyChangesCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                    <Button Content="{DynamicResource Btn_UndoRename}"
                            Command="{Binding UndoChangesCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                <!-- 정렬 -->
                    <TextBlock Margin="0,0,0,4"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                               Text="{DynamicResource Sort_Label}" />
                    <ComboBox HorizontalAlignment="Stretch"
                              Margin="0,0,0,2"
                              ItemsSource="{Binding SortOptions}"
                              SelectedItem="{Binding SelectedSortOption}"
                              DisplayMemberPath="Display" />
                    <ui:ToggleSwitch IsOn="{Binding IsSortAscending}"
                                     OnContent="{DynamicResource Sort_Asc}"
                                     OffContent="{DynamicResource Sort_Desc}" />
                    <Button Content="{DynamicResource Btn_ReorderIndex}"
                            Command="{Binding ReorderNumberCommand}"
                            Style="{StaticResource SidebarButtonStyle}" />
                </StackPanel>

                <Separator Margin="0,0,0,8" />

                <!-- 기타 -->
                <StackPanel Orientation="Vertical">
                    <Grid Margin="0">
                        <CheckBox Content="{DynamicResource Option_ManualEdit}"
                                  IsChecked="{Binding ManualEditMode}"
                                  VerticalAlignment="Center"/>
                        <Image Source="{StaticResource HelpIcon}"
                               Width="12" Height="12"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center">
                               <Image.ToolTip>
                                <ToolTip Content="{DynamicResource Tip_ManualEdit}" />
                            </Image.ToolTip>
                        </Image>
                    </Grid>
                    <Grid Margin="0">
                        <CheckBox Content="{DynamicResource Option_ShowExt}"
                                  IsChecked="{Binding ShowExtension}"
                                  VerticalAlignment="Center"/>
                        <Image Source="{StaticResource HelpIcon}"
                               Width="12" Height="12"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               ToolTip="{DynamicResource Tip_ShowExt}" />
                    </Grid>
                    <Grid Margin="0">
                        <CheckBox Content="{DynamicResource Option_ConfirmDeletion}"
                                  IsChecked="{Binding ConfirmDeletion}"
                                  VerticalAlignment="Center"/>
                        <Image Source="{StaticResource HelpIcon}"
                               Width="12" Height="12"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               ToolTip="{DynamicResource Tip_ConfirmDeletion}" />
                    </Grid>
                </StackPanel>

            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>
