<UserControl x:Class="TagNamer.Views.Controls.HeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:TagNamer"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d">

    <!-- 상단 정보 -->
    <Border Padding="10,5"
            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
            BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
            BorderThickness="0,0,0,1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />   <!-- 좌측: '규칙' 표시 -->
                <ColumnDefinition Width="*" />      <!-- 중앙: 규칙 표시 -->
                <ColumnDefinition Width="Auto" />   <!-- 우측: 버전 정보 -->
                <ColumnDefinition Width="Auto" />   <!-- 우측: 언어 선택 -->
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       FontSize="18"
                       FontWeight="Normal"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       Text="{DynamicResource Header_Rule}" />

            <!-- 현재 적용 중인 규칙 표시 -->
            <StackPanel Grid.Column="1"
                        Orientation="Vertical">
                <TextBlock FontSize="18"
                           FontWeight="Normal"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                           Text="{Binding CurrentRuleDisplay}" />
            </StackPanel>

             <!-- 버전 정보 -->
            <TextBlock Grid.Column="2"
                       Margin="15,0,10,0"
                       VerticalAlignment="Center"
                       FontSize="14"
                       FontWeight="Normal"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       Text="{x:Static local:App.Version}" />

            <!-- 언어 선택 토글 버튼 -->
            <ToggleButton Grid.Column="3"
                            Width="32"
                            Height="20"
                            Padding="0"
                            FontSize="11"
                            FontWeight="SemiBold"
                            VerticalAlignment="Center"
                            IsChecked="{Binding SelectedLanguage, Converter={StaticResource LanguageToBoolConverter}, Mode=TwoWay}"
                            ToolTip="{DynamicResource Header_Language}">
                <ToggleButton.Style>
                    <Style TargetType="ToggleButton" BasedOn="{StaticResource DefaultToggleButtonStyle}">
                        <Setter Property="Content" Value="EN"/>
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Content" Value="KO"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
        </Grid>
    </Border>
</UserControl>
