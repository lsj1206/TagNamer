<Application x:Class="TagNamer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:local="clr-namespace:TagNamer"
             xmlns:converters="clr-namespace:TagNamer.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <converters:LanguageToBoolConverter x:Key="LanguageToBoolConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
                <ResourceDictionary Source="Themes/Generic.xaml" />
                <ResourceDictionary Source="Assets/Icons/file.xaml" />
                <ResourceDictionary Source="Assets/Icons/folder.xaml" />
                <ResourceDictionary Source="Assets/Icons/help.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
